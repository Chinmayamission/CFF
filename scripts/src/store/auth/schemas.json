{
  "signIn": {
    "schema": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "Email Address"
        },
        "password": {
          "type": "string",
          "title": "Password",
          "description": "Password needs to have at least 8 characters, an uppercase and a lowercase character."
        }
      },
      "required": [
        "email",
        "password"
      ]
    },
    "uiSchema": {
      "password": {
        "ui:widget": "password"
      },
      "ui:cff:submitButtonText": "Sign In"
    }
  },
  "signUp": {
    "schema": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "Email Address",
          "description": "You will use this email address to log in to your account."
        },
        "password": {
          "type": "string",
          "title": "Password"
        },
        "password2": {
          "type": "string",
          "title": "Re-enter password"
        }
      },
      "required": [
        "email",
        "password",
        "password2"
      ]
    },
    "uiSchema": {
      "password": {
        "ui:widget": "password"
      },
      "password2": {
        "ui:widget": "password"
      },
      "ui:cff:submitButtonText": "Sign Up"
    }
  },
  "forgotPassword": {
    "schema": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "Email Address"
        }
      },
      "required": [
        "email"
      ]
    },
    "uiSchema": {}
  },
  "forgotPasswordSubmit": {
    "schema": {
      "type": "object",
      "description": "Please check your email for a code and enter the code here to change your password:",
      "properties": {
        "email": {
          "type": "string",
          "title": "Email Address"
        },
        "code": {
          "type": "string",
          "title": "Code"
        },
        "password": {
          "type": "string",
          "title": "New password"
        },
        "password2": {
          "type": "string",
          "title": "Confirm new password"
        }
      },
      "required": [
        "email",
        "code",
        "password",
        "password2"
      ]
    },
    "uiSchema": {
      "password": {
        "ui:widget": "password"
      },
      "password2": {
        "ui:widget": "password"
      }
    }
  }
}